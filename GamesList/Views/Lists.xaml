<Window x:Class="GamesList.Views.Lists"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamesList.Views"
        mc:Ignorable="d"
        Title="Lists" Height="450" Width="1000">
    <Grid>
        <!-- Menú -->
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Change files path" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Help"/>
        </Menu>
        <!-- Contenidos -->
        <Grid>
            <ComboBox HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>

        </Grid>
        <Label Content="Year" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="150,59,33,19"/>
    </Grid>
</Window>
